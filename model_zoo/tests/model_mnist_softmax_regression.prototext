model {
  name: "dnn"
  objective_function: "cross_entropy"
  metric {
    categorical_accuracy {
    }
  }
  data_layout: "data_parallel"
  mini_batch_size: 32
  block_size: 256
  num_epochs: 4
  num_parallel_readers: 0
  procs_per_model: 0
  use_cudnn: true
  num_gpus: -1

  ###################################################
  # Callbacks
  ###################################################
  callback {
    print {
      interval: 1
    }
  }
  callback {
    timer {
    }
  }
  callback {
    summary {
      dir: "."
      batch_interval: 1
      mat_interval: 25
    }
  }
  callback {
    gradient_check {
      step_size: 0
      verbose: false
      fail_on_error: true
    }
  }

  ###################################################
  # start of layers
  ###################################################

  #######
  # INPUT
  #######
  layer {
    name: "1"
    parent: "1"
    data_layout: "data_parallel"
    input_partitioned_minibatch {
    }
  }

  #################
  # FULLY_CONNECTED
  #################
  layer {
    name: "2"
    parent: "1"
    data_layout: "model_parallel"
    fully_connected {
      num_neurons: 10
      weight_initialization: "glorot_uniform"
      has_bias: false
    }
  }

  #########
  # SOFTMAX
  #########
  layer {
    name: "3"
    parent: "2"
    data_layout: "model_parallel"
    softmax {
    }
  }

  ########
  # TARGET
  ########
  layer {
    name: "4"
    parent: "3"
    data_layout: "data_parallel"
    target_partitioned_minibatch {
      shared_data_reader: true
    }
  }

  ###################################################
  # end of layers
  ###################################################
}
